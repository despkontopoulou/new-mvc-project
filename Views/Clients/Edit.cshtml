@model NewMVCProject.ViewModels.ClientProgramViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Client Program</h2>

    <form asp-action="Edit" method="post">
        <div class="form-group mb-3">
            <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ProgramName" class="control-label">Select Program</label>
            <select asp-for="ProgramName" class="form-control" asp-items='(IEnumerable<SelectListItem>)ViewData["Programs"]'>
                <option value="">-- Select a Program --</option>
            </select>
            <span asp-validation-for="ProgramName" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Save Changes" class="btn btn-dark py-2 fs-4 mx-auto d-block" />
        </div>

        <div class="form-group mt-3 text-center">
            <a asp-action="Index" asp-controller="Sellers" class="btn btn-secondary btn-sm">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model NewMVCProject.ViewModels.ClientViewModel

<form asp-action="Create" method="post">
    <div>
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" name="FirstName" required />
    </div>

    <div>
        <label for="LastName">Last Name</label>
        <input type="text" id="LastName" name="LastName" required />
    </div>

    <div>
        <label for="Username">Username</label>
        <input type="text" id="Username" name="Username" required />

        @if (ViewData.ModelState["Username"]?.Errors.Any() == true)
        {
            <span class="text-danger">@ViewData.ModelState["Username"]?.Errors[0].ErrorMessage</span>
        }
    </div>

    <div>
        <label for="Password">Password</label>
        <input type="password" id="Password" name="Password" required />
    </div>

    <div>
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" id="PhoneNumber" name="PhoneNumber" required />

        @if (ViewData.ModelState["PhoneNumber"]?.Errors.Any() == true)
        {
            <span class="text-danger">@ViewData.ModelState["PhoneNumber"]?.Errors[0].ErrorMessage</span>
        }
    </div>

    <div>
        <label for="ProgramName">Phone Program</label>
        <select id="ProgramName" name="ProgramName" required>
            @if (ViewData["PhonePrograms"] != null)
            {
                foreach (var program in ViewData["PhonePrograms"] as List<SelectListItem>)
                {
                    <option value="@program.Value">@program.Text</option>
                }
            }
            else
            {
                <option value="">No programs available</option>
            }
        </select>
    </div>

    <div>
        <label for="AFM">AFM</label>
        <input type="text" id="AFM" name="AFM" required />
    </div>

    <button type="submit">Create Client</button>
</form>

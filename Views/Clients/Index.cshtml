@model NewMVCProject.Models.Client

@{
    ViewData["Title"] = "Client Dashboard";
}

<div class="text-center">
    <h1>Welcome, @Model.User.FirstName @Model.User.LastName</h1>
</div>

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="text-center">
        <a class="btn btn-dark btn-lg w-100 mb-3 py-3 fs-4" asp-action="Index" asp-controller="Bills">
            View Unpaid Bills
        </a>
        <br>
        <a class="btn btn-dark btn-lg w-100 mb-3 py-3 fs-4" asp-action="Index" asp-controller="Calls">
            View Call History
        </a>
        <br>
    </div>
</div>

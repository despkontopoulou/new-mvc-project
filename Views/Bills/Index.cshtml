@model IEnumerable<NewMVCProject.Models.Bill>

@{
    ViewData["Title"] = "Unpaid Bills";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Your Bills</h1>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Phone Number</th>
                <th>Cost of Bill</th>
                <th>Billing Details</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model)
            {
                <tr>
                    <td>@bill.PhoneNumber</td>
                    <td>@bill.Costs</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@bill.BillId" class="btn btn-secondary btn-sm">View Details</a>
                    </td>
                    <td>
                        <form method="post" action="@Url.Action("Delete", "Bills", new { id = bill.BillId })">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-dark btn-sm">Pay Bill</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model NewMVCProject.ViewModels.BillViewModel

<h1>Create Bill</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter client phone number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Costs" class="control-label"></label>
        <input asp-for="Costs" class="form-control" placeholder="Enter cost amount" />
        <span asp-validation-for="Costs" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

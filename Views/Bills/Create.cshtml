@model NewMVCProject.ViewModels.BillViewModel

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="w-100">
        <h1 class="text-center mb-4">Create Bill</h1>

        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter client phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Costs" class="control-label">Costs</label>
                <input asp-for="Costs" class="form-control" placeholder="Enter cost amount" />
                <span asp-validation-for="Costs" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-dark w-10 py-2 fs-4 mx-auto d-block" />
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
